<h1>Contatos</h1>

<table class="table">
  <thead class="table-dark">
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Sobrenome</th>
      <th scope="col">Email</th>
      <th scope="col">Telefone</th>
       <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
  <% @contatos.each do |contato| %>
      <tr>
        <td><%= contato.first_name %></td>
        <td><%= contato.last_name %></td>
        <td><%= contato.email %></td>
        <td><%= contato.phone %></td>
        <td>
          <%= link_to 'Show', contato, class:"btn btn-secondary fa-thin fa-eye" %>
          <%= link_to 'Edit', edit_contato_path(contato), class:"btn btn-secondary fa-thin fa-edit"  %>
          <%= link_to 'Destroy', contato, class:"btn btn-danger fa-thin fa-trash" , method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
       </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contato', new_contato_path, class:"btn btn-secondary" %>
